@{
    Layout = "~/Shared/_LayoutPage.cshtml";

}
@using WebMatrix.Data

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amatic+SC">
    <style>
        h1, p, td, th {
            font-family: "Amatic SC", sans-serif;
            
        }
        h1 {
            font-weight: bold;
            font-size: 3rem;
        }
        p {
            font-size: 2rem;
        }
        #Pizza th, td {            
            font-size: 3rem;
        }       
        #tablenumber {
            padding-left: 5rem;
        }
    </style>
</head>
<body>
    <div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/bilder/menybild.jpg" data-src="holder.js/900x400?theme=social" alt="900x400" data-holder-rendered="true" style="width: 900px; height: 400px;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/bilder/unnamed.jpg" data-src="holder.js/900x400?theme=industrial" alt="900x400" data-holder-rendered="true" style="width: 900px; height: 400px;">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div>
        @{
            var db = Database.Open("pizzadatabasanslutning");
            var queryString = "SELECT * FROM Pizzor ORDER BY Price DESC ";
            var result = db.Query(queryString);
        }
        <table id="Pizza" class="table table-light table-striped">
            <thead class="thead-dark">
                <tr>
                    <th id="tablenumber" scope="col">#</th>
                    <th scope="col">Pizzor</th>
                    <th scope="col">Pris</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                    foreach (var pizzor in result)
                    {
                        /*<div id="Pizza" class="w3-container menu w3-padding-32 w3-white">
                            <h1><p>@pizzor.Name</p> <span class="w3-right w3-tag w3-dark-grey w3-round">@pizzor.Price kr</span></h1>
                            <p class="w3-text-grey"></p>
                        </div>*/
                        <tr>
                            <th scope="row" id="tablenumber">@counter</th>
                            <td>@pizzor.Name</td>
                            <td>@pizzor.Price kr</td>
                        </tr>
                        counter = counter + 1;
                    }
                }
            </tbody>
        </table>
    </div>
    <div >
        <div class="card-deck">
            <div class="card" style="border: none;">
                <div class="card-body">
                    <h1 class="card-title">KEBAB</h1>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                </div>
            </div>
            <div class="card" style="border: none;">
                <div class="card-body" >
                    <h1 class="card-title">FALAFEL</h1>
                    <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
                </div>
            </div>
            <div class="card" style="border: none;">
                <div class="card-body">
                    <h1 class="card-title">KYCKLING</h1>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This card has even longer content than the first to show that equal height action.</p>
                </div>
            </div>
        </div>

    </div>
</body>
</html>